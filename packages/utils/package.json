{
  "name": "@secrez/utils",
  "version": "1.0.3",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc 'src/**/*.js' 'test/**/*.js'",
    "all-tests": "find test/** -name '*.test.js' | xargs ./node_modules/.bin/mocha -R spec",
    "test-only": "cross-env NODE_ENV=test ./node_modules/.bin/mocha test/*.test.js test/**/*.test.js --exit",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test/*.test.js test/**/*.test.js --exit",
    "posttest": "nyc check-coverage --statements 90 --branches 80 --functions 85 --lines 90"
  },
  "dependencies": {
    "base58": "^2.0.1",
    "case": "^1.6.3",
    "csv-parse": "^4.16.0",
    "fs-extra": "^9.1.0",
    "isbinaryfile": "^4.0.8",
    "lodash": "^4.17.21",
    "play-sound": "^1.1.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@secrez/test-helpers": "workspace:~1.0.3",
    "chai": "^4.3.4",
    "chalk": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0"
  },
  "description": "The Secrez core library.",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/secrez/secrez.git"
  },
  "author": {
    "name": "Francesco Sullo",
    "email": "francesco@sullo.co"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
